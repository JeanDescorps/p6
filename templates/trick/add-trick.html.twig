{% extends 'profile-base.html.twig' %}

{% block subtitle %}Vue d'ensemble{% endblock %}
{% block mainTitle %}Ajouter un trick{% endblock %}

{% form_theme form _self %}

{% block body %}
    <!-- Start Create Trick -->
    <div class="col-lg-12">
        <div class="card card-small mb-4">
            <div class="card-header border-bottom">
                <h6 class="m-0">Ajouter votre trick</h6>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item p-3">
                    <div class="row">
                        <div class="col">
                            {% form_theme form _self %}
                            {{ form_start(form) }}
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.title) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.lead) }}
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.file) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.category) }}
                                    </div>
                                </div>                              
                                <div class="form-group">
                                    {{ form_row(form.content) }}
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 text-center">
                                        <p>Cliquez pour ajouter une image</p>
                                        {{ form_widget(form.images) }}
                                        <input type="hidden" id="image-counter" value="0">
                                        <div class="form-group mt-2">
                                            <button type="button" class="btn btn-outline-info" id="add-image">Ajouter une image</button>
                                            <span class="counter-image text-danger"></span>
                                        </div>                                     
                                    </div>
                                    <div class="form-group col-md-6 text-center">
                                        <p>Cliquez pour ajouter une vidéo</p>
                                        {{ form_widget(form.videos) }}
                                        <input type="hidden" id="video-counter" value="0">
                                        <div class="form-group mt-2">
                                            <button type="button" class="btn btn-outline-info" id="add-video">Ajouter une vidéo</button>
                                            <span class="counter-video text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mt-4 text-center">
                                    <button type="submit" class="btn btn-success">Ajouter le trick</button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- End Create Trick -->
{% endblock %}

{% block _trick_images_entry_widget %}
    <div class="row block-image"  id="block_{{id}}">
        <div class="col-md-6 offset-md-2">
            <div class="form-group">
                {{ form_errors(form.image) }}
                {{ form_widget(form.image) }}
            </div>
        </div>
        <div class="col-md-2">
            <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-white btn-trick"><i class="material-icons text-danger">clear</i></button>
        </div>
        <div class="col-md-1"></div>
    </div>
{% endblock %}

{% block _trick_videos_entry_widget %}
    <div class="row" id="block_{{id}}">
        <div class="col-md-6 offset-md-2">
            <div class="form-group">
                {{ form_widget(form.url) }}
            </div>
        </div>
        <div class="col-md-2">
            <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-white btn-trick"><i class="material-icons md-24 text-danger">clear</i></button>
        </div>
        <div class="col-md-1"></div>
    </div>
{% endblock %}

