{% extends 'base.html.twig' %}

{% block title %}Snowtricks - S'inscrire{% endblock %}

{% block body %}
    <div class="container registration">

        <!-- Start Logo -->
        <div class="row justify-content-center">
            <div class="col-2">
                <img class="img-fluid mb-5" src="/images/logup-logo.png" alt="Registration Logo">
            </div>               
        </div>
        <!-- End Logo -->

        <!-- Registration Form -->
        <div class="row justify-content-center">         
            <div class="col-md-6">
                <h1 class="mb-5 text-center">Inscrivez-vous</h1>
                {% if success %}
                    <div class="alert alert-success">
                        {{ success }}
                    </div>
                {% endif %}   
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.password) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.passwordConfirm) }}
                    </div>
                    <div class="form-group mt-5 text-center">
                        {{ form_row(form.Inscription) }}
                    </div>
                {{ form_end(form) }} 
            </div>
        </div>
        <!-- End Registration Form -->
        
    </div>
{% endblock body %}