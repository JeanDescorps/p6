{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container forgot">

        <!-- Start Logo -->
        <div class="row justify-content-center">
            <div class="col-2">
                <img class="img-fluid mb-5" src="/images/reset-password.png" alt="Reset Password Logo">
            </div>               
        </div>
        <!-- Start Logo -->

        <!-- Start Forgot Password Form -->
        <div class="row justify-content-center">         
            <div class="col-md-6">
                <h1 class="mb-5 text-center">Mot de passe oublié</h1>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}            
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="form-group mt-5 text-center">
                        <button type="submit" class="btn btn-success">Réinitialiser le mot de passe</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
        <!-- Start Forgot Password Form -->
        
    </div>
{% endblock %}
